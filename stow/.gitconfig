[filter "lfs"]
   clean = git-lfs clean -- %f
   smudge = git-lfs smudge -- %f
   process = git-lfs filter-process
   required = true
[user]
   name = Ruslan Rotaru
   email = rotarur.social.apps@gmail.com
	signingkey = F3DBB6A784D703BA2BD2FA3A32614536C7D7A9CB
[push]
   default = current
[pull]
   default = current
   rebase = true

[url "git@github.com:"]
	insteadOf = https://github.com/
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE

[commit]
	gpgsign = true
[core]
	editor = nvim
